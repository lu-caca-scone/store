<p style="color: green"><%= notice %></p>

<%= image_tag @product.featured_image if @product.featured_image.attached? %>

<% cache @product do %>
  <h1><%= @product.name %></h1>
  <%= @product.description %>
<% end %>

<%= render "inventory", product: @product %>

<% if authenticated? %>
  <div>
    <%= link_to "Edit this product", edit_product_path(@product) %>
    <%= link_to "Back to products", products_path %></p>
    <%= button_to "Delete this product", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>